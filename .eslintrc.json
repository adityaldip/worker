{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "extends": ["eslint:recommended", "prettier"],
    "env": {
        "es2021": true,
        "node": true
    },
    "rules": {
        "indent": "off",
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
        "no-console": 0,
        "class-methods-use-this": [0],
        "camelcase": 0,
        "no-underscore-dangle": 0,
        "no-await-in-loop": 0
    }
}
